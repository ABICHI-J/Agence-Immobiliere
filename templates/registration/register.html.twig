{% extends 'base.html.twig' %}

{% block title %}Annonces immobilières
{% endblock %}

{% block body %}
	<div class="page-register-login">
		<div class="banner-login-register"></div>

		<div class="form form-register">
			<h1 class="titre-register">Créer un compte</h1>
			<div class="flex redirection">
				<p class="mr-15">Vous avez déjà un compte ?
				</p>
				<p class="lien link-underline">
					<a href="{{ path('app_login') }}">Se connecter</a>
				</p>
			</div>
			<div>
				{{ form_start(registrationForm) }}
				<div class="sec flex-jc-sb">
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
				</div>
				<div class="sec flex-jc-sb">

					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.password) }}
				</div>
				<div class="sec flex-jc-sb">

					{{ form_row(registrationForm.phone) }}
					{{ form_row(registrationForm.address) }}
				</div>
				<div class="sec flex-jc-sb">

					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.zipcode) }}
				</div>
				<div class="sec flex">

					{{ form_row(registrationForm.country) }}
				</div>
				<div class="sec agree-terms">
					{{ form_row(registrationForm.agreeTerms) }}
				</div>
				<div class="sec">
					<button type="submit" class="btn-register-login">Créer un compte</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>

{% endblock %}
