<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="UTF-8">
	<title>Ma page avec une carte Leaflet</title>
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
	<style>
		#mapid {
			height: 84vh;
			width: 62%;
			position: fixed;
			top: 0px;
			margin-top: 16vh;
			right: 0;
			z-index:2;
		}
		.container {
			height: 100vh;
			display: flex;
			flex-direction: row;
		}
		.content {
			flex: 1;
			padding: 20px;
		}
	</style>
</head>
<body>
		{# <div class="content">
			<h1>Titre de ma page</h1>
			<p>Contenu de ma page</p>
		</div> #}
		<div id="mapid"></div>

	<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
	<script>
		const mymap = L.map('mapid').setView([48.856614, 2.3522219], 13);
		L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
			attribution: '&copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
			maxZoom: 18,
		}).addTo(mymap);
		// Ajouter des marqueurs ou des polygones sur la carte
	</script>
</body>
</html>

