{% extends 'base.html.twig' %}

{% block title %}Annonces index{% endblock %}

{% block body %}
    <h1>Annonces index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company</th>
                <th>Price</th>
                <th>Rooms</th>
                <th>bedrooms</th>
                <th>Surface</th>
                <th>Floor</th>
                <th>Address</th>
                <th>Image</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.company }}</td>
                <td>{{ annonce.price }} € / mois</td>
                <td>{{ annonce.rooms }}</td>
                <td>{{ annonce.bedrooms }}</td>
                <td>{{ annonce.surface }} m²</td>
                <td>{{ annonce.floor }}èmè</td>
                <td>{{ annonce.address }}</td>
                <td><img src="{{ asset( annonce.image) }}" width="100"></td>
                <td>{{ annonce.createdAt ? annonce.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.updatedAt ? annonce.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="actions">
                    <a href="{{ path('app_annonces_crud_edit', {'id': annonce.id}) }}" class="edit"> Editer</a>
                    
                    {{ include('annonces_crud/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
