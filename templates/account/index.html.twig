{% extends 'base.html.twig' %}

{% block title %}Annonces immobilières
{% endblock %}

{% block body %}
	<div class="container-acc">
<h1 class="titre-account ta-s">Mon compte

		</h1>
		<p class="email-account">{{app.user.email}}</p>
		<div class="flex-jc-sb container-2div-acc">
			<a  class="flex flex-ai-c containers-acc left-acc" href={{ path('app_favoris') }}>
				<div>
					<img class="icons-acc" src="/assets/images/coeur.png" alt="icon-coeur">
				</div>
				<div>
